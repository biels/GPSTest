<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biel.com.gpstest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Target:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/txtLat"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:hint="Latitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtLong"
        android:hint="Longitude"
        android:layout_below="@+id/txtLat"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Set alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLong"
        android:layout_alignParentStart="true"
        android:id="@+id/btnSet" />

    <Button
        android:text="Remove alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLong"
        android:layout_toEndOf="@+id/btnSet"
        android:id="@+id/btnRemove" />

    <Button
        android:text="Populate from last known"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSet"
        android:layout_alignParentStart="true"
        android:id="@+id/btnPopulateFromLastKnown" />
</RelativeLayout>
